<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="135dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--Image position-->
    <androidx.cardview.widget.CardView
        android:id="@+id/Image_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <ImageView
            android:id="@+id/Trending_Image"
            android:layout_width="103dp"
            android:layout_height="101dp"
            android:scaleType="fitXY"
            android:src="@drawable/trending_one" />

    </androidx.cardview.widget.CardView>

    <!--Trending Name-->
    <TextView
        android:id="@+id/Trending_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ivonne Chair, green"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:textSize="18dp"
        android:textColor="#040404"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/Image_position"/>

    <!--Trending Price-->
    <TextView
        android:id="@+id/Trending_Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$29.00"
        android:textSize="18dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="23dp"
        android:textColor="#f45a7e"
        app:layout_constraintTop_toBottomOf="@id/Trending_Name"
        app:layout_constraintLeft_toRightOf="@id/Image_position"/>

    <!--Shop bottom-->
    <Button
        android:id="@+id/Shop_bottom"
        android:layout_width="81dp"
        android:layout_height="39dp"
        android:layout_marginTop="65dp"
        android:layout_marginRight="20dp"
        android:text="Shop"
        android:textColor="#FFFFFF"
        android:background="#242a38"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <!--Line-->
    <TextView
        android:id="@+id/Line"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#eaeaea"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/Image_position"/>

</androidx.constraintlayout.widget.ConstraintLayout>